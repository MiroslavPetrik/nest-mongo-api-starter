{
  "name": "nest-mongo-api-starter",
  "version": "1.0.0",
  "description": "Full-featured starter for Typescript Node & Mongo Rest API server featuring NestJS\n",
  "author": "Miroslav Petrik",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/main.js\"",
    "start:debug": "tsc-watch -p tsconfig.build.json --onSuccess \"node --inspect-brk dist/main.js\"",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "run-s --continue-on-error e2e:prepare e2e:run e2e:cleanup",
    "e2e:prepare": "tsc **/**/*schema.ts --outDir './test/seeder'",
    "e2e:run": "jest --detectOpenHandles --config  ./test/jest-e2e.json",
    "e2e:cleanup": "rm test/seeder/*.js"
  },
  "dependencies": {
    "@nest-middlewares/serve-static": "^6.0.0",
    "@nest-modules/mailer": "^1.1.3",
    "@nestjs/common": "^6.0.0",
    "@nestjs/core": "^6.0.0",
    "@nestjs/jwt": "^6.1.1",
    "@nestjs/mongoose": "^6.1.2",
    "@nestjs/passport": "^6.1.0",
    "@nestjs/swagger": "^3.1.0",
    "bcryptjs": "^2.4.3",
    "bunyan": "^1.8.12",
    "class-validator": "^0.9.1",
    "compression": "^1.7.4",
    "dotenv": "^8.0.0",
    "helmet": "^3.20.0",
    "lodash": "^4.17.15",
    "mongoose": "5.6.7",
    "morgan": "^1.9.1",
    "nest": "^0.1.6",
    "nest-morgan": "^1.0.1",
    "nestjs": "^0.0.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "rotating-file-stream": "^1.4.3",
    "swagger-ui-express": "^4.0.7",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@nestjs/testing": "6.5.3",
    "@types/bunyan": "^1.8.6",
    "@types/express": "4.17.0",
    "@types/jest": "24.0.15",
    "@types/mongoose": "^5.5.11",
    "@types/morgan": "^1.7.36",
    "@types/node": "12.6.8",
    "@types/passport-jwt": "^3.0.1",
    "@types/supertest": "2.0.8",
    "jest": "24.8.0",
    "mongoose-seed": "^0.6.0",
    "npm-run-all": "^4.1.5",
    "prettier": "1.18.2",
    "rimraf": "^2.6.3",
    "supertest": "4.0.2",
    "ts-jest": "24.0.2",
    "ts-node": "8.3.0",
    "tsc-watch": "2.2.1",
    "tsconfig-paths": "3.8.0",
    "tslint": "5.18.0",
    "typescript": "3.5.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
