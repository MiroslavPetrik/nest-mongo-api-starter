{
  "name": "nest-mongo-api-starter",
  "version": "1.0.0",
  "description": "Full-featured starter for Typescript Node & Mongo Rest API server featuring NestJS\n",
  "author": "Miroslav Petrik",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/main.js\"",
    "start:debug": "tsc-watch -p tsconfig.build.json --onSuccess \"node --inspect-brk dist/main.js\"",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --detectOpenHandles --config  ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nest-middlewares/serve-static": "^6.0.0",
    "@nest-modules/mailer": "^1.1.3",
    "@nestjs/common": "8.2.6",
    "@nestjs/core": "8.2.6",
    "@nestjs/jwt": "8.0.0",
    "@nestjs/mongoose": "9.0.2",
    "@nestjs/passport": "8.1.0",
    "@nestjs/platform-express": "8.2.6",
    "@nestjs/swagger": "5.1.5",
    "bcryptjs": "^2.4.3",
    "bunyan": "^1.8.12",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.9.1",
    "compression": "^1.7.4",
    "dotenv": "^8.0.0",
    "helmet": "^3.20.0",
    "lodash": "^4.17.19",
    "mongoose": "6.1.7",
    "morgan": "^1.9.1",
    "nest": "^0.1.6",
    "nest-morgan": "^1.0.1",
    "nestjs": "^0.0.1",
    "passport": "0.5.2",
    "passport-jwt": "4.0.0",
    "passport-local": "1.0.0",
    "reflect-metadata": "^0.1.13",
    "rotating-file-stream": "^1.4.3",
    "rxjs": "^7",
    "swagger-ui-express": "^4.0.7",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@nestjs/testing": "8.2.6",
    "@types/bcryptjs": "^2.4.2",
    "@types/bunyan": "^1.8.6",
    "@types/compression": "^0.0.36",
    "@types/dotenv": "^6.1.1",
    "@types/express": "4.17.0",
    "@types/helmet": "^0.0.43",
    "@types/jest": "24.0.15",
    "@types/lodash": "^4.14.136",
    "@types/mongoose": "5.11.97",
    "@types/morgan": "^1.7.36",
    "@types/node": "12.6.8",
    "@types/nodemailer": "^6.2.1",
    "@types/passport-jwt": "3.0.6",
    "@types/passport-local": "1.0.34",
    "@types/supertest": "2.0.8",
    "@types/uuid": "^3.4.5",
    "jest": "24.8.0",
    "mongoose-seed-2": "^0.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "1.18.2",
    "rimraf": "^2.6.3",
    "supertest": "4.0.2",
    "ts-jest": "24.0.2",
    "ts-node": "8.3.0",
    "tsc-watch": "4.6.0",
    "tsconfig-paths": "3.8.0",
    "tslint": "5.18.0",
    "typescript": "4.5.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "packageManager": "yarn@3.1.1"
}
